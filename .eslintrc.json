{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended"],
  "globals": {
    "angular": true,
    "_": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "parser": "@typescript-eslint/parser",
    "sourceType": "module"
  },
  "rules": {
   "semi": ["error", "always"],
   "prettier/prettier": ["error", { "doubleQuote": true }],
   "quotes": ["error", "double"]
  },
  "overrides": [
    {
      "files": ["bin/*.js", "lib/*.js"],
      "excludedFiles": ["*.test.js"],
      "rules": {
        "indent": ["error", 2],
        "quotes": ["error", "double", { "avoidEscape": true }]
      }
    }
  ]
}
