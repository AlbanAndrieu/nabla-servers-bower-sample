<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

  <display-name>Sample Application</display-name>
  <description>Sample Application</description>

  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>

  <filter>
      <filter-name>GzipFilter</filter-name>
      <filter-class>org.eclipse.jetty.servlets.GzipFilter</filter-class>
      
      <async-supported>true</async-supported>      
      <init-param>
        <param-name>mimeTypes</param-name>
        <param-value>text/html,text/plain,text/xml,application/xhtml+xml,text/css,application/javascript,application/json,image/svg+xml</param-value>
      </init-param>
      <!--
      <init-param>
        <param-name>methods</param-name>
        <param-value>GET,POST</param-value>
      </init-param>
      -->
  </filter>
  <filter-mapping>
      <filter-name>GzipFilter</filter-name>
      <url-pattern>/*</url-pattern>
  </filter-mapping>

  <servlet>
       <servlet-name>com.test.project.sample.servlet.MyApplication</servlet-name>
       <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
       <init-param>
           <param-name>javax.ws.rs.Application</param-name>
           <param-value>com.test.project.sample.MyApplication</param-value>
       </init-param>
       <load-on-startup>1</load-on-startup>
   </servlet>
   <servlet-mapping>
       <servlet-name>com.test.project.sample.servlet.MyApplication</servlet-name>
       <url-pattern>/rest/*</url-pattern>
   </servlet-mapping>

   <servlet>
      <servlet-name>proxy-login</servlet-name>
      <!-- <servlet-class>com.test.project.sample.LoginProxyServlet$Transparent</servlet-class>-->
      <servlet-class>org.eclipse.jetty.proxy.ProxyServlet$Transparent</servlet-class>
      <!-- <async-supported>true</async-supported> -->

	  <init-param>
	    <param-name>proxyTo</param-name>
	    <param-value>http://home.nabla.mobi:8080/login</param-value>
	  </init-param>

	  <init-param>
	    <param-name>prefix</param-name>
	    <param-value>/login</param-value>
	  </init-param>

      <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
      <servlet-name>proxy-login</servlet-name>
      <url-pattern>/login/*</url-pattern>
  </servlet-mapping>

   <servlet>
      <servlet-name>proxy-apidocs</servlet-name>
      <!-- <servlet-class>com.test.project.sample.LoginProxyServlet$Transparent</servlet-class>-->
      <servlet-class>org.eclipse.jetty.proxy.ProxyServlet$Transparent</servlet-class>
      <!-- <async-supported>true</async-supported> -->
      
	  <init-param>
	    <param-name>proxyTo</param-name>
	    <param-value>http://home.nabla.mobi:8080/apidocs</param-value>
	  </init-param>

	  <init-param>
	    <param-name>prefix</param-name>
	    <param-value>/apidocs</param-value>
	  </init-param>

      <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
      <servlet-name>proxy-apidocs</servlet-name>
      <url-pattern>/apidocs/*</url-pattern>
  </servlet-mapping>
</web-app>
