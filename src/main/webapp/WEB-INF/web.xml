<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

  <display-name>Sample Application</display-name>
  <description>Sample Application</description>

  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>

  <servlet>
      <servlet-name>jersey</servlet-name>
      <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
      <init-param>
          <param-name>com.sun.jersey.config.property.packages</param-name>
          <param-value>com.test.project.sample</param-value>
      </init-param>
      <init-param>
          <param-name>com.sun.jersey.api.json.POJOMappingFeature</param-name>
          <param-value>true</param-value>
      </init-param>

      <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
      <servlet-name>jersey</servlet-name>
      <url-pattern>/rest/*</url-pattern>
  </servlet-mapping>

   <servlet>
      <servlet-name>proxy-login</servlet-name>
      <!-- <servlet-class>com.test.project.sample.LoginProxyServlet$Transparent</servlet-class>-->
      <servlet-class>org.eclipse.jetty.proxy.ProxyServlet$Transparent</servlet-class>

	  <init-param>
	    <param-name>proxyTo</param-name>
	    <param-value>http://home.nabla.mobi:8080/login</param-value>
	  </init-param>

	  <init-param>
	    <param-name>prefix</param-name>
	    <param-value>/login</param-value>
	  </init-param>

      <async-supported>true</async-supported>
      <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
      <servlet-name>proxy-login</servlet-name>
      <url-pattern>/login/*</url-pattern>
  </servlet-mapping>


   <servlet>
      <servlet-name>proxy-apidocs</servlet-name>
      <!-- <servlet-class>com.test.project.sample.LoginProxyServlet$Transparent</servlet-class>-->
      <servlet-class>org.eclipse.jetty.proxy.ProxyServlet$Transparent</servlet-class>

	  <init-param>
	    <param-name>proxyTo</param-name>
	    <param-value>http://home.nabla.mobi:8080/apidocs</param-value>
	  </init-param>

	  <init-param>
	    <param-name>prefix</param-name>
	    <param-value>/apidocs</param-value>
	  </init-param>

      <async-supported>true</async-supported>
      <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
      <servlet-name>proxy-notifications</servlet-name>
      <url-pattern>/apidocs/*</url-pattern>
  </servlet-mapping>
</web-app>
